@model GoodsManagementMVC.Models.Goods

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sửa hàng hóa";
}

<h1>Sửa hàng hóa</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}

<form asp-action="Edit" asp-controller="Goods" method="post">
    <input type="hidden" asp-for="MaHangHoa" />
    <div class="form-group">
        <label asp-for="MaHangHoa">Mã hàng hóa</label>
        <input asp-for="MaHangHoa" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="TenHangHoa">Tên hàng hóa</label>
        <input asp-for="TenHangHoa" class="form-control" required />
        <span asp-validation-for="TenHangHoa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoLuong">Số lượng</label>
        <input asp-for="SoLuong" class="form-control" type="number" required min="0" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GhiChu">Ghi chú</label>
        <input asp-for="GhiChu" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" asp-controller="Goods" class="btn btn-secondary">Quay lại</a>
</form>