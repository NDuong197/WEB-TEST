@model GoodsManagementMVC.Models.Goods

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Xóa hàng hóa";
}

<h1>Xóa hàng hóa</h1>
<h3>Bạn có chắc muốn xóa?</h3>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã hàng hóa</dt>
        <dd class="col-sm-10">@Model.MaHangHoa</dd>
        <dt class="col-sm-2">Tên hàng hóa</dt>
        <dd class="col-sm-10">@Model.TenHangHoa</dd>
        <dt class="col-sm-2">Số lượng</dt>
        <dd class="col-sm-10">@Model.SoLuong</dd>
        <dt class="col-sm-2">Ghi chú</dt>
        <dd class="col-sm-10">@Model.GhiChu</dd>
    </dl>

    <form asp-action="Delete" asp-controller="Goods" method="post">
        <input type="hidden" asp-for="MaHangHoa" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" asp-controller="Goods" class="btn btn-secondary">Hủy</a>
    </form>
</div>