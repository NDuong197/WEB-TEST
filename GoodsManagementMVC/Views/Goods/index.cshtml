@model List<GoodsManagementMVC.Models.Goods>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Danh sách hàng hóa";
}

<h1>Danh sách hàng hóa</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}

<p>
    <a asp-action="Create" asp-controller="Goods" class="btn btn-primary">Thêm mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã hàng hóa</th>
            <th>Tên hàng hóa</th>
            <th>Số lượng</th>
            <th>Ghi chú</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var good in Model)
        {
            <tr>
                <td>@good.MaHangHoa</td>
                <td>@good.TenHangHoa</td>
                <td>@good.SoLuong</td>
                <td>@good.GhiChu</td>
                <td>
                    <a asp-action="Edit" asp-controller="Goods" asp-route-id="@good.MaHangHoa" class="btn btn-warning btn-sm">Sửa</a> |
                    <a asp-action="Delete" asp-controller="Goods" asp-route-id="@good.MaHangHoa" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>